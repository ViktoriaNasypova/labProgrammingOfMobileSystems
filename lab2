//
//  HobbyView.swift
//  lr2
//
//  Created by IPZ-31 on 10.10.2024.
//

import SwiftUI

struct HobbyView: View {
    
    var hobbie: Hobby
    @State private var isExpanded = false
    let maximumLines = 3
    
    var body: some View {
        Image(uiImage: hobbie.image)
            .resizable()
        Text(hobbie.description)
            .lineLimit(isExpanded ? nil : maximumLines)
            .animation(.easeInOut, value: isExpanded)
            .fixedSize(horizontal: false, vertical: true)
        Button(action: {
            isExpanded.toggle()
        }) {
            Text(isExpanded ? "See Less" : "See More")
                .foregroundColor(.blue)
        }    }
}

#Preview {
    HobbyView(hobbie: Hobby(image: .checkmark, description: "BLa bla"))
}
